// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch client",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/clients/vscode/",
                "--folder-uri=${workspaceRoot}/test",
                "--disable-extensions"
            ],
            "outFiles": [
                "${workspaceFolder}/clients/vscode/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build:vscode"
        }
    ]
}
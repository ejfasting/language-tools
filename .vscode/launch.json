// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch superoffice-vscode-core",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                "--extensionDevelopmentKind=web",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/superoffice-vscode-core/",
                "--disable-extensions"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/superoffice-vscode-core/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build-core"
        }
    ]
}
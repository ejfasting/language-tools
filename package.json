        "esbuild": "^0.20.2",
        "eslint": "^8.57.0"
    },
    "dependencies": {
        "@volar/typescript": "~2.2.0",
        "@volar/language-core": "~2.2.0",
        "@volar/monaco": "~2.2.0",

{
  "name": "@superoffice/vscode",
  "description": "",
  "author": "Eivind Fasting",
  "version": "0.0.1",
  "publisher": "SuperOffice",
  "repository": {
    "type": "git",
    "url": "https://github.com/ejfasting/language-tools"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/client.js",
  "contributes": {
    "languages": [
      {
        "id": "jsfso",
        "extensions": [
          ".jsfso"
        ],
        "configuration": "./jsfso-language-configuration.json"
      },
      {
        "id": "crmscript",
        "extensions": [
          ".crmscript"
        ],
        "configuration": "./crmscript-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jsfso",
        "scopeName": "source.jsfso",
        "path": "./syntaxes/jsfso.tmLanguage.json"
      },
      {
        "language": "crmscript",
        "scopeName": "source.crmscript",
        "path": "./syntaxes/crmscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "@superoffice/vscode.signIn",
        "title": "Sign In",
        "icon": "$(log-in)",
        "category": "SuperOffice"
      },
      {
        "command": "@superoffice/vscode.showScriptInfo",
        "title": "ShowScriptInfo"
      },
      {
        "command": "@superoffice/vscode.previewScript",
        "title": "PreviewScript"
      },
      {
        "command": "@superoffice/vscode.downloadScript",
        "title": "DownloadScript"
      },
      {
        "command": "@superoffice/vscode.downloadScriptFolder",
        "title": "DownloadScriptFolder"
      },
      {
        "command": "@superoffice/vscode.executeScript",
        "title": "ExecuteScript",
        "category": "SuperOffice",
        "enablement": "resourceScheme == file"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "superoffice",
          "title": "SuperOffice",
          "icon": "/resources/logo.svg"
        }
      ]
    },
    "views": {
      "superoffice": [
        {
          "id": "superoffice.views.treeview",
          "name": "Scripts"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "superoffice.views.treeview",
        "contents": "You are not logged in to SuperOffice [learn more](https://docs.superoffice.com/).\n[Login](command:@superoffice/vscode.signIn)"
      }
    ],
    "menus": {
      "view/title": [],
      "view/item/context": [
        {
          "command": "@superoffice/vscode.previewScript",
          "group": "0_script",
          "when": "view == superoffice.views.treeview && viewItem == script"
        },
        {
          "command": "@superoffice/vscode.downloadScript",
          "group": "0_script",
          "when": "view == superoffice.views.treeview && viewItem == script"
        },
        {
          "command": "@superoffice/vscode.downloadScriptFolder",
          "group": "0_script",
          "when": "view == superoffice.views.treeview && viewItem == folder"
        }
      ],
      "explorer/context": [
        {
          "submenu": "superoffice.submenu",
          "group": "superoffice",
          "when": "authenticated"
        }
      ],
      "superoffice.submenu": [
        {
          "command": "@superoffice/vscode.executeScript"
        }
      ]
    },
    "submenus": [
      {
        "id": "superoffice.submenu",
        "label": "SuperOffice"
      }
    ],
    "configuration": [
      {
        "order": 22,
        "id": "superoffice",
        "title": "superoffice",
        "properties": {
          "superoffice.trace.server": {
            "type": "string",
            "scope": "window",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "verbose",
            "description": "Traces the communication between VS Code and the languageserver."
          }
        }
      }
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "vscode:prepublish": "npm run build:prod",
    "build": "node ./scripts/build.js",
    "build:prod": "node ./scripts/build.js --production"
  }
}
{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2022",
		],
		"module": "Node16",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": ["packages/**/*"]
}